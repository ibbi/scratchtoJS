{
    "name": "Scratch to JS",
    "version": "1.0",
    "description": "Toolbox to help transition from Scratch to JavaScript",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "content_security_policy": "script-src 'self' https://woofjs.com; object-src 'self' https://woofjs.com",
    "options_page": "options.html",
    "manifest_version": 2
}
